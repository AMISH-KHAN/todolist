<%- include("header");-%>
<body>
    <div class="box" id="heading">
        

            <h1 > <%= listtitle %></h1>
        
    </div>
    <div class="box">
       
        <%addeditem.forEach((item)=>{%>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checker" onchange="this.form.submit()" value=<%= item._id %> >
                    <p><%= item.Name %></p>
                    <input type="hidden" name="itemname"  value="<%= listtitle %>">
                </div>

            </form>
            <%})%>

        <form action="/" method="post" class="item">
            <input type="text" name="item" id="item" placeholder="add item" autocomplete="off">
            <button type="submit" name="submit" value=<%= listtitle %>>+</button>
        </form>
    </div>
</body>
<%- include("footer");-%>
</html>